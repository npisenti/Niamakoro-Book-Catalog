<div class="span12">
  <%= form_for(@user_session) do |f| %>
    <% if @user_session.errors.any? %>
      <div id="error_explanation">
        <p><%= pluralize(@user_session.errors.count, "error") %> prohibited this user_session from being saved:</p>

        <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <div class="clearfix">
        <%= f.label :username, "Nom d'utilisateur" %>
        <div class="input">
          <%= f.text_field :username, {:class => "xlarge" } %>
        </div>
      </div>


      <div class="clearfix">
        <%= f.label :password, "Mot de passe" %>
        <div class="input">
          <%= f.password_field :password, {:class => "xlarge" }%>
        </div>
      </div>

      <div class="actions">
        <%= f.submit("Login", { :class => "btn primary" }) %>
      </div>
    </fieldset>
  <% end %>
</div>
