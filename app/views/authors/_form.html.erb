<div class="span12">
  <%= form_for(@author) do |f| %>
    <fieldset>

      <div class="clearfix">
        <%= f.label :first %>
        <div class="input">
          <%= f.text_field :first,  {:class => "xlarge" } %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :last %>
        <div class="input">
          <%= f.text_field :last,  {:class => "xlarge" } %>
        </div>
      </div>

    <div class="actions">
      <%= f.submit({ :class => "btn primary" }) %>
    </div>
  </fieldset>
  <% end %>

</div>
