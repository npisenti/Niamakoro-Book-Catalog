<div class="span12">
  <%= form_for(@subject) do |f| %>
    <fieldset>

      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name,  {:class => "xlarge" } %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :description %>
        <div class="input">
          <%= f.text_area :description,  {:class => "xlarge" } %>
        </div>
      </div>

    <div class="actions">
      <%= f.submit({ :class => "btn primary" }) %>
    </div>
  </fieldset>
  <% end %>

</div>
